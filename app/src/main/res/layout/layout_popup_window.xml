<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#381983">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:id="@+id/change_neighbourhood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"

                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"

                android:fontFamily="sans-serif-condensed-light"
                android:textColor="#d0c5f6"
                android:textSize="15sp"
                android:text="Change neighborhood" />

            <TextView
                android:id="@+id/location1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/change_neighbourhood"

                android:layout_marginTop="25dp"
                android:layout_marginStart="5dp"

                android:gravity="center_vertical"
                android:drawableTint="#271258"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="10dp"
                android:text="Bellandur"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/location1"
                app:layout_constraintBottom_toBottomOf="@id/location1"

                android:gravity="center_vertical"
                android:textColor="#d0c5f6"
                android:textSize="13sp"
                android:text="Remove"
                android:drawableTint="#271258"
                android:drawableEnd="@drawable/ic_remove"
                android:drawablePadding="10dp" />

            <TextView
                android:id="@+id/location2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/location1"

                android:layout_marginTop="25dp"
                android:layout_marginStart="5dp"

                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:text="Munnekollal"
                android:textStyle="bold"
                android:drawableTint="#271258"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="10dp" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toEndOf="@id/location2"
                app:layout_constraintTop_toTopOf="@id/location2"
                app:layout_constraintBottom_toBottomOf="@id/location2"

                android:layout_marginStart="5dp"

                android:src="@drawable/ic_check"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/location2"

                android:layout_marginTop="25dp"
                android:layout_marginStart="5dp"

                android:gravity="center_vertical"
                android:textColor="#d0c5f6"
                android:textSize="13sp"
                android:text="Add Neighborhood"
                android:fontFamily="sans-serif-condensed-light"
                android:drawableTint="#271258"
                android:drawableStart="@drawable/ic_no_fill_add"
                android:drawablePadding="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>